{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",

    "lib": [ "ESNext", "DOM" ],

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "preserveConstEnums": true,
    "resolveJsonModule": true,

    "jsx": "react",

    "typeRoots": [ "node_modules/@types" ],

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [ "./webpack.config.ts", "./src/index.webpack.tsx", "dist" ]
}